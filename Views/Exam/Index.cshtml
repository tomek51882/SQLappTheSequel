@model IEnumerable<SQLappTheSequel.Models.Result>
@{
    ViewBag.Title = "Index";
}
<div class="jumbotron">
    <h1>Wyniki</h1>
    <p class="lead">Tutaj możesz sprawdzić swoje wyniki dotyczące tego zadania.</p>
</div>

<div class="col-md-12 mb-3 p-0">
    <div class="card">
        <div class="card-header">
            Treść zadania
        </div>
        <div class="card-body">
            <p class="card-text">@ViewBag.Command</p>
        </div>
    </div>
</div>

@if (Model.Count() == 0)
{
<div class="col-md-12 mb-3 p-0">
    <div class="card text-center">
        <div class="card-body">
            <p class="card-text">Jeszcze nie rozwiązałeś tego zadania... :(</p>
        </div>
    </div>
</div>
}
else
{
    foreach (var item in Model)
    {
        <div class="list-group-item list-group-item-action flex-column align-items-start">
            <div class="row">
                <div class="col">
                    <h5>@Html.DisplayFor(modelItem => item.CompletionDate)</h5>
                </div>
                <div class="col-sm-auto text-right">
                    @if (item.Score == 1)
                    {
                        <p class="text-success">Zaliczone</p>
                    }
                    else
                    {
                        <p class="text-danger">Niezaliczone</p>
                    }

                </div>
            </div>
            @if (item.Score == 1)
            {
                <div class="progress" style="height: 3px;">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            }
            else
            {
                <div class="progress" style="height: 2px;">
                    <div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            }
            <div class="row mt-2">
                <div class="col">
                    <p>Przesłane rozwiązanie:</p>
                    @Html.DisplayFor(modelItem => item.UserAnswerSql)
                </div>
            </div>

        </div>
    }
}